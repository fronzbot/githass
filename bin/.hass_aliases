# Aliases to be used as default user (not hass user)
# Example addition in bash_rc file:
# if [ -f ~hass/.homeassistant/bin/.hass_aliases ]; then
#    . ~hass/.homeassistant/bin/.hass_aliases
# fi

alias ha_restart='cd ~hass/.homeassistant; sudo python3 gen_automations.py; sudo chown hass automations.yaml; sudo chgrp hass automations.yaml; cd ~; sudo systemctl restart home-assistant.service'
alias ha_status='sudo systemctl status home-assistant.service -l'
alias ha_upgrade='cd ~/fabric-home-assistant; fab upgrade_homeassistant'
alias ha_stop='sudo systemctl stop home-assistant.service'
alias zwavecp='cd /srv/hass/src/open-zwave-control-panel/; sudo ./ozwcp -p 8888'
alias suhass='sudo su -s /bin/bash hass'
alias cert_renew='cd ~/certbot; ./certbot-auto renew --quiet --no-self-upgrade --standalone --standalone-supported-challenges http-01'